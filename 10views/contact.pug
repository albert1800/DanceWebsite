extends base.pug

block scripts
    script(src="/10static/10index.js")

block style
    style
        include ../10static/10style.css
        include ../10static/styleContact.css

block content
    div.container
        h1 Contact Us
        form(action="/contact", method="post" class="myForm")
            input(type="text" class="myInput" name="name" placeholder="Enter your name")
            input(type="contact" class="myInput" name="phone" placeholder="Enter your number")
            input(type="email" class="myInput" name="email" placeholder="Enter your email Id")
            input(type="text" class="myInput" name="address" placeholder="Enter your address")
            input(type="text" class="myInput" name="desc" placeholder="(optional)")
            button(class="btn")
                | Submit